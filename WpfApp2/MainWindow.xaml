<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="DimGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2" Grid.RowSpan="2" Background="LightGray" Margin="10" CornerRadius="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>
                <Label Content="text" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />
                <TextBox Grid.Column="1" Margin="20" Name="texxtBox" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <Button Grid.Column="2" Margin="20" Content="Click me" Name="AddButton"/>
                <TextBlock Grid.Row="1" Text="text 2"/>
                <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="15" Background="Gray">
                    <Label Content="Text1" HorizontalAlignment="Center" Foreground="White"/>
                    <Label Content="Text2" HorizontalAlignment="Center" Foreground="White"/>
                    <Label Content="Text3" HorizontalAlignment="Center" Foreground="White"/>


                </StackPanel>
            </Grid>
        </Border>
        <StackPanel Grid.Column="2" Background="LightGray" Grid.RowSpan="3" Name="RightPanel">
            <Label Content="Egy" HorizontalAlignment="Center"/>
            <Label Content="Egy" HorizontalAlignment="Center"/>
            <Label Content="Egy" HorizontalAlignment="Center"/>
            <Label Content="Egy" HorizontalAlignment="Center"/>


        </StackPanel>
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <Label Content="Valami" Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            <Label Content="Valami" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            <Label Content="Valami" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            <Label Content="Valami" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>


        </Grid>
    </Grid>
</Window>
